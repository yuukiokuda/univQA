<div class="prof_base">
  <div class="prof_icon">
    <% if @user.image.attached? %>
      <%= image_tag @user.image %>
    <% end %>
  </div>
  <div class="prof_base_items"> 
    <div class="prof_nickname">
      ニックネーム：<%= @nickname %>
    </div>
    <div class="prof_univ">
      大学名：<%= Univ.find(@user.univ_id).name %>
    </div>
    <div class="prof_user">
      <% if @newuser == 1 %>
        在校生
      <% else %>
        新入生
      <% end %>
    </div>

<% if @info.present? %>
<p>学部学科名：<%= @info.faculty %></p>
<p>得意ジャンル１：<%= Genre.find(@info.genre_first_id).name %></p>
<p>得意ジャンル２：<%= Genre.find(@info.genre_second_id).name %></p>
<p>得意ジャンル３：<%= Genre.find(@info.genre_third_id).name %></p>
<p>プロフィール：<%= @info.profile %></p>
<% end %>


<div class="contents row">
  <p><%= @nickname %>さんの質問一覧</p>
<% if @questions.present? %>
<% @questions.each do |question| %>
タイトル：
<%= link_to question.title, question_path(question.id) %>
ジャンル：
<%= Genre.find(question.genre_id).name %> <!-- ジャンル名に変換 -->
質問内容：
<%= question.content %>
    回答期限：
    <% if question.limit_id.present? %>
      <% days_to_add = question.limit_id %>
      <% new_time_object = question.updated_at + days_to_add.days %>
      <%= new_time_object.strftime("%Y-%m-%d") %>
    <% end %>
    <% if question.image.attached? %>
      <%= image_tag question.image, class: 'image-class' %>
    <% end %>
<%end%>
<% else %>
  <p>質問はありません</p>
<% end %>
</div>


  <p><%= @nickname %>さんの回答一覧</p>
<% if @answers.present? %>
<% @answers.each do |answer| %>
回答者名：
<%= User.find(answer.user_id).nickname %>
質問内容：
<%= answer.content %>
投稿日：
<%= answer.updated_at.strftime('%Y-%m-%d') %>
<% if answer.image.attached? %>
<%= image_tag answer.image, class: 'image-class' %>
<% end %>
<% end %>
<% else %>
  <p>回答はありません</p>
<% end %>

<% if current_user.newuser == true %>
<% if @info.present? %>
<%= link_to "プロフィールの編集", edit_user_path(current_user) %>
<%= link_to "先輩学生情報の修正", edit_info_olduser_path(current_user.id) %>
<% else %>
<%= link_to "プロフィールの編集", edit_user_path(current_user) %>
<%= link_to "先輩学生情報の追加", new_info_olduser_path(current_user.id) %>
<% end %>
<% else %>
<%= link_to "プロフィールの編集", edit_user_path(current_user) %>
<% end %>


                <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>