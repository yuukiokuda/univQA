<h1>ユーザー情報の編集</h1>

    <h3>先輩学生の情報追加</h3>
    <%= form_with(model: @info, local: true) do |f| %>
      <%= f.text_field :faculty, placeholder: "学部学科名" %>
      <%= f.collection_select(:genre_first_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-genre"}) %>
      <%= f.collection_select(:genre_second_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-genre"}) %>
      <%= f.collection_select(:genre_third_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-genre"}) %>
      <%= f.text_field :profile, placeholder: "プロフィール" %>
      <%= f.file_field :image, placeholder: "アイコン画像" %>
      <%= f.submit "登録する" %>
    <% end %>